{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./electron",
    "rootDir": "./electron",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules", "vite.config.ts"]
}
